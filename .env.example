# Server
PORT=3000
NODE_ENV=production

# Database (set one of the two)
MONGO_URI=mongodb+srv://user:pass@cluster/dbname
# MONGODB_URI=

# Auth & security
JWT_SECRET=change-me
JWT_EXPIRES_IN=7d
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=strong-password
ADMIN_NAME=Admin

# CORS (comma-separated list of allowed origins)
FRONTEND_URL=https://huni.example.com,https://app.huni.example.com

# Payments webhook
PAYMENT_SMS_SECRET=super-secret
PAYMENT_SMS_ALLOWED_IPS=1.2.3.4/32,5.6.7.0/24
PAYMENT_MATCH_TOLERANCE=100

# Metrics
METRICS_SECRET=metrics-secret
METRICS_ALLOWED_IPS=10.0.0.0/8,127.0.0.1/32

# Cloudinary (avatars)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Alternative single var:
# CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# Logging / ops
LOG_TO_FILE=false
SLACK_WEBHOOK_URL=
